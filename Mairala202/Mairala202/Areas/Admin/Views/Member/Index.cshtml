@using Mairala202.Areas.Admin.ViewModels;
@model PaginationVM<Member>
<div class="main-panel">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Table</h4>
                        <a asp-action="Create" class="btn btn-inverse-dark btn-fw">Create</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            User
                                        </th>
                                        <th>
                                            Name
                                        </th>

                                        <th>
                                            Position
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="py-1">
                                                <img src="~/assets/images/@item.Image" alt="image">
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>

                                            <td>
                                                @item.Position
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-inverse-dark btn-fw">Update</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-inverse-dark btn-fw">Delete</a>

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">

                            @for (int i = 0; i < Model.TotalPage; i++)
                            {
                                <li class="page-item"><a class="page-link" asp-route-page="@(i+1)">@(i + 1)</a></li>

                            }


                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>
</div>